<div class="max-w-lg mx-auto bg-white p-6 rounded  border border-gray-200 rounded-lg shadow-md">
  <h2 class="text-xl font-semibold mb-4">Upload Image</h2>

  <%= form_with model: [@album, @photo], data: { turbo: false } do |f| %>

    <% if @photo.errors.any? %>
      <div class="mb-4 bg-red-100 text-red-700 p-3 rounded">
        <ul>
          <% @photo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-6">
      <%= f.label :image, class: "block mb-1 font-medium" %>
      <%= f.file_field :images,multiple: true,
            class: "w-full border px-3 py-2 rounded" %>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel",
            album_photos_path(@album),
            class: "text-gray-600" %>

      <%= f.submit "Upload",
            class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded" %>
    </div>

  <% end %>
</div>
