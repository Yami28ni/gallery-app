<div class="max-w-xl mx-auto bg-white p-6 rounded-base bg-white p-6 border border-gray-200 rounded-lg shadow-md">
  <h1 class="text-2xl font-semibold mb-6 text-gray-900 ">Create New Album</h1>

  <%= form_with model: @album, data: { turbo: false } do |f| %>

    <% if @album.errors.any? %>
      <div class="mb-4 bg-red-100 text-red-700 p-4 rounded">
        <ul>
          <% @album.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :title, class: "block mb-1 font-medium " %>
      <%= f.text_field :title,
            class: "w-full border border-gray-300 rounded px-3 py-2",
            placeholder: "Album title" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, class: "block mb-1 font-medium" %>
      <%= f.text_area :description,
            rows: 3,
            class: "w-full border border-gray-300 rounded px-3 py-2",
            placeholder: "Album description" %>
    </div>
    
    
    <div class="mb-4">
      <label class= "block mb-1 font-medium">Tags</label>

      <input
        type="text"
        id="tag-input"
        placeholder="Tags..."
        class="w-full border border-gray-300 rounded px-3 py-2"
      >
       
      <div id="tag-list" class="mt-2 flex gap-2 flex-wrap"></div>

      <div id="hidden-tags"></div>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel",
            albums_path,
            class: "text-gray-600 hover:underline py-2" %>

      <%= f.submit "Create Album",
            class: "bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded" %>
    </div>

  <% end %>
</div>


