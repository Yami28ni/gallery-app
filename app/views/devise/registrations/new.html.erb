<div class="w-full max-w-sm mx-auto bg-white p-6 border border-gray-200 rounded-lg shadow-sm">

  <h2 class="text-xl font-semibold text-gray-900 mb-6">
    Sign up
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>
    <!-- Name -->
    <div class="mb-4">
      <%= f.label :name, class: "block mb-2 text-sm font-medium text-gray-700" %>
      <%= f.text_field :name,
            autofocus: true,
            class: "block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500" %>
    </div>
    <!-- Email -->
    <div class="mb-4">
      <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-700" %>
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <!-- Password -->
    <div class="mb-4">
      <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-700" %>

      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mb-1">
          (<%= @minimum_password_length %> characters minimum)
        </p>
      <% end %>

      <%= f.password_field :password,
            autocomplete: "new-password",
            class: "block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <!-- Password confirmation -->
    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <!-- Submit -->
    <div>
      <%= f.submit "Create account",
            class: "w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 focus:outline-none" %>
    </div>

  <% end %>

  <!-- Devise links -->
  <div class="mt-4 text-sm text-blue-600 hover:underline">
    <%= render "devise/shared/links" %>
  </div>

</div>



